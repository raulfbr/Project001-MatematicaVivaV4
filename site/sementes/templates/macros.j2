{% macro scene_card(title, icon='', id='') %}
<div class="scene-card" {% if id %}id="{{ id }}"{% endif %}>
    {% if title %}
    <div class="scene-header">
        {% if icon %}<span class="scene-icon">{{ icon }}</span>{% endif %}
        {{ title }}
    </div>
    {% endif %}
    {{ caller() }}
</div>
{% endmacro %}

